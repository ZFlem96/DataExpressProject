doctype
html
    head
        title= title
        link(href='/styles/style.css', rel='stylesheet')
    body
        h3 Video Game Survey List

        table(class='gridtable')
            tr
                th Id
                th Name
                th Favorite Game Genre
                th Favorite Developer
                th Favorite Console Creator
                th
                th
            each item in vgsEntry
                tr
                    td
                        a(href='/details/' + item.id) #{item.id}
                    td #{item.name}
                    td #{item.favoriteGameGenre}
                    td #{item.favoriteDeveloper}
                    td #{item.favoriteConsoleCreator}
                    td
                        a(href='/edit/' + item.id) Edit
                    td
                        a(href='/delete/' + item.id) Delete

        p
        #list
            a(href='/create') Add data.  
            a(href='/')   Go to home screen